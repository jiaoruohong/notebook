% Set Background Picture
%------------------------------------------------------------------------------
\usepackage{transparent}
\usepackage{eso-pic}

\newcommand{\BackgroundPic}[1]{%
\AddToShipoutPicture*{
\put(0,0){%
\parbox[b][\paperheight]{\paperwidth}{%
\vfill
\centering
{\transparent{0.8} \includegraphics[%
width=\paperwidth,%
%height=\paperheight,%
keepaspectratio]{%
#1}}%
\vfill
}}}}

